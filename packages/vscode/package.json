{
  "name": "@coven/vscode",
  "displayName": "Coven",
  "description": "Agent orchestration system for VSCode",
  "version": "0.0.1",
  "publisher": "coven",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.git"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "coven",
          "title": "Coven",
          "icon": "resources/coven.svg"
        }
      ]
    },
    "views": {
      "coven": [
        {
          "id": "coven.sessions",
          "name": "Sessions",
          "type": "tree",
          "icon": "resources/coven.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "coven.startSession",
        "title": "Coven: Start Session",
        "icon": "$(play)"
      },
      {
        "command": "coven.stopSession",
        "title": "Coven: Stop Session",
        "icon": "$(stop)"
      },
      {
        "command": "coven.showSetup",
        "title": "Coven: Show Setup"
      },
      {
        "command": "coven.revealSidebar",
        "title": "Coven: Reveal Sidebar"
      },
      {
        "command": "coven.startTask",
        "title": "Start Task",
        "icon": "$(play)"
      },
      {
        "command": "coven.stopTask",
        "title": "Stop Task",
        "icon": "$(stop)"
      },
      {
        "command": "coven.showTaskDetail",
        "title": "View Details",
        "icon": "$(eye)"
      },
      {
        "command": "coven.viewFamiliarOutput",
        "title": "View Output",
        "icon": "$(terminal)"
      },
      {
        "command": "coven.createTask",
        "title": "Create Task",
        "icon": "$(add)"
      },
      {
        "command": "coven.refreshTasks",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "coven.reviewTask",
        "title": "Review",
        "icon": "$(checklist)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "coven.createTask",
          "when": "view == coven.sessions",
          "group": "navigation"
        },
        {
          "command": "coven.refreshTasks",
          "when": "view == coven.sessions",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "coven.startTask",
          "when": "view == coven.sessions && viewItem == task.ready",
          "group": "inline"
        },
        {
          "command": "coven.showTaskDetail",
          "when": "view == coven.sessions && viewItem =~ /^task\\./",
          "group": "inline"
        },
        {
          "command": "coven.stopTask",
          "when": "view == coven.sessions && viewItem == task.working",
          "group": "inline"
        },
        {
          "command": "coven.viewFamiliarOutput",
          "when": "view == coven.sessions && viewItem =~ /^familiar\\./",
          "group": "inline"
        },
        {
          "command": "coven.reviewTask",
          "when": "view == coven.sessions && viewItem == task.review",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "build": "npm run lint && tsx scripts/build.ts && npm run build:webviews",
    "build:e2e": "tsc -p src/test/e2e/tsconfig.json",
    "watch": "tsx scripts/build.ts --watch",
    "package": "vsce package",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "build:webviews": "tsx scripts/build-webviews.ts",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:no-coverage": "vitest run",
    "pretest:e2e": "npm run build && npm run build:e2e",
    "test:e2e": "tsx scripts/run-e2e-tests.ts"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.0.4",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.55.0",
    "glob": "^10.3.10",
    "jsdom": "^27.0.1",
    "mocha": "^10.2.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "vite": "^5.0.10",
    "vitest": "^1.0.4"
  }
}
