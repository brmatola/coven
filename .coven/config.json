{
  "maxConcurrentAgents": 3,
  "worktreeBasePath": ".coven/worktrees",
  "beadsSyncIntervalMs": 30000,
  "agentTimeoutMs": 600000,
  "mergeConflictMaxRetries": 2,
  "preMergeChecks": {
    "enabled": false,
    "commands": []
  },
  "agentPermissions": {
    "allowedTools": [
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(mkdir:*)"
    ]
  },
  "logging": {
    "level": "info",
    "retentionDays": 7
  },
  "outputRetentionDays": 7,
  "notifications": {
    "questions": "modal",
    "completions": "toast",
    "conflicts": "toast",
    "errors": "toast"
  }
}